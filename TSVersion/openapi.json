    "/login": {
      "post": {
        "description": "Login student",
        "tags": [
          "user"
        ],
        "requestBody": {
          "$ref": "#/components/requestBodies/UserLogin"
        },
        "responses": {
          "200": {
            "description": "Logged successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "userToken": {
                      "type": "string"
                    },
                    "hasGroup": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login-group": {
      "post": {
        "description": "Login student to a group",
        "tags": [
          "user"
        ],
        "requestBody": {
          "required": true,
          "description": "The 6-characters code of the group.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": {
                    "type": "string",
                    "maxLength": 6,
                    "minLength": 6
                  }
                }
              }
            }
          }
        },
        "responses": {
