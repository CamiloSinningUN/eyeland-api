  "components": {
    "schemas": {
      "Task": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "taskOrder": {
            "type": "integer",
            "format": "int64",
            "description": "The number of the task (1, 2, 3, 4, 5)"
          },
          "completed": {
            "type": "boolean",
            "description": "If the task was completed successfully"
          },
          "thumbnailUrl": {
            "type": "string",
            "description": "The url of the thumbnail of the task"
          }
        }
      },
      "TaskIntroduction": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "taskOrder": {
            "type": "integer",
            "format": "int64",
            "description": "The number of the task (1, 2, 3, 4, 5)"
          },
          "thumbnailUrl": {
            "type": "string",
            "description": "The url of the thumbnail of the task"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "longDescription": {
            "type": "string"
          }
        }
      },
      "TaskProgress": {
        "type": "object",
