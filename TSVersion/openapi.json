    "/login-team": {
      "post": {
        "description": "Login student to a team",
        "tags": [
          "user"
        ],
        "requestBody": {
          "required": true,
          "description": "The 6-characters code of the team",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginTeam"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Joined team successfully"
          },
          "400": {
            "description": "Invalid code"
          },
          "401": {
            "description": "Missing authentication"
          },
          "403": {
            "description": "Unauthorized to access this resource | Team is full"
          },
          "404": {
            "description": "Team not found"
          },
          "409": {
            "description": "Student already has a team"
          },
          "410": {
            "description": "Team is not active"
          },
          "498": {
            "description": "Token expired/invalid"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
